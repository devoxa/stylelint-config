{
  "name": "@devoxa/stylelint-config",
  "description": "The shareable configuration for stylelint used in all Devoxa projects",
  "version": "3.0.2",
  "main": "stylelint.config.js",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/devoxa/stylelint-config"
  },
  "scripts": {
    "format": "prettier --ignore-path='.gitignore' --list-different --write .",
    "format:check": "prettier --ignore-path='.gitignore' --check .",
    "lint": "stylelint --ignore-path='.gitignore' '{src,tests}/**/*.scss'"
  },
  "prettier": "@devoxa/prettier-config",
  "dependencies": {
    "postcss-scss": "4.0.6",
    "stylelint-config-standard-scss": "10.0.0",
    "stylelint-order": "6.0.3",
    "stylelint-scss": "5.1.0"
  },
  "peerDependencies": {
    "stylelint": "^14.0.0 || ^15.0.0"
  },
  "devDependencies": {
    "@devoxa/prettier-config": "2.0.2",
    "postcss": "8.4.27",
    "prettier": "3.0.1",
    "stylelint": "15.10.2",
    "typescript": "5.1.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "volta": {
    "node": "18.17.0"
  }
}
